<a href="/admin" class="back-link">‚Üê Back to Admin Menu</a>

<div class="admin-page">

  <h2>Pack Management</h2>

  <!-- PACK LIST -->
  <div class="pack-list">
    <table class="apex-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Pack Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Actions</th>
          <th>Rewards</th>
        </tr>
      </thead>

      <tbody>
        <% packs.forEach(pack => { %>
          <tr>
            <td><%= pack.pack_id %></td>
            <td><%= pack.pack_name %></td>
            <td><%= pack.price %></td>
            <td><%= pack.description %></td>
            <td>
              <!-- VIEW -->
              <a class="btn view" href="/api/packs/<%= pack.pack_id %>">View</a>

              <!-- EDIT -->
              <a class="btn edit" href="/api/packs/<%= pack.pack_id %>/edit">Edit</a>

              <!-- DELETE -->
              <form
                method="POST"
                action="/api/packs/<%= pack.pack_id %>/delete"
                style="display:inline;"
              >
                <button class="btn delete" type="submit">Delete</button>
              </form>
            </td>
            <td>
              <a class="btn rewards" href="/api/packRewards/manage/<%= pack.pack_id %>">
                Manage Rewards
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <hr>

  <!-- CREATE PACK FORM (HORIZONTAL) -->
  <h3>Create New Pack</h3>

  <form action="/api/packs/manage/create" method="POST" class="create-form-row">
    <div class="field">
      <label>Pack Name</label>
      <input type="text" name="pack_name" required>
    </div>

    <div class="field small">
      <label>Price (coins)</label>
      <input type="number" name="price" value="0" min="0" required>
    </div>

    <div class="field wide">
      <label>Description</label>
      <textarea name="description" rows="2"></textarea>
    </div>

    <div class="field button-field">
      <label>&nbsp;</label>
      <button type="submit" class="btn create">Create Pack</button>
    </div>
  </form>

</div>

