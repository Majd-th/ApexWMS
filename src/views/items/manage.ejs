<a href="/admin" class="back-link">‚Üê Back to Admin Menu</a>

<div class="admin-page">

  <h2>Item Management</h2>

  <!-- ITEM LIST -->
  <div class="item-list"><table class="apex-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% items.forEach(item => { %>
      <tr>
        <td><%= item.item_id %></td>
        <td><%= item.item_name %></td>
        <td><%= item.category %></td>
        <td><%= item.subcategory %></td>
        <td><%= item.description %></td>

        <td>
          <a class="btn view" href="/api/items/<%= item.item_id %>">View</a>
          <a class="btn edit" href="/api/items/<%= item.item_id %>/edit">Edit</a>

          <form method="POST" action="/api/items/<%= item.item_id %>/delete" style="display:inline;">
            <button class="btn delete" type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

  </div>

  <hr>

  <!-- CREATE ITEM FORM -->
  <h3>Create New Item</h3>

  <form action="/api/items" method="POST" class="create-form-row">
    <div class="field wide">
      <label>Name</label>
      <input type="text" name="item_name" required>
    </div>

    <div class="field">
      <label>Category</label>
      <input type="text" name="category" required>
    </div>

    <div class="field">
      <label>Subcategory</label>
      <input type="text" name="subcategory">
    </div>

    <div class="field small">
      <label>Legend ID (opt.)</label>
      <input type="number" name="legend_id" min="1">
    </div>

    <div class="field small">
      <label>Damage</label>
      <input type="number" name="damage" min="0">
    </div>

    <div class="field">
      <label>Ammo Type</label>
      <input type="text" name="ammo_type">
    </div>

    <div class="field description-field">
      <label>Description</label>
      <input type="text" name="description">
    </div>

    <div class="field button-field">
      <label>&nbsp;</label>
      <button type="submit" class="btn create">Create Item</button>
    </div>
  </form>

</div>

