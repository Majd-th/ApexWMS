<a href="/admin" class="back-link">‚Üê Back to Admin Menu</a>

<div class="admin-page">
  <h2>Legend Management</h2>

  <!-- LEGENDS TABLE -->
  <div class="legend-list">
    <table class="apex-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Role</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% legends.forEach(legend => { %>
          <tr>
            <!-- üëá correct field names -->
            <td><%= legend.legend_id %></td>
            <td><%= legend.name %></td>
            <td><%= legend.role %></td>
            <td class="description-cell"><%= legend.description %></td>

            <td>
              <!-- Go to abilities manage page -->
              <a class="btn view"
                 href="/api/abilities/manage/<%= legend.legend_id %>">
                Abilities
              </a>

              <!-- Edit: still hits JSON endpoint for now -->
              <a class="btn edit"
   href="/api/legends/<%= legend.legend_id %>/edit">
  Edit
</a>


              <!-- Delete legend (same behaviour as before) -->
              <form method="POST"
                    action="/api/legends/<%= legend.legend_id %>/delete"
                    style="display:inline;">
                <button type="submit" class="btn delete">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- CREATE NEW LEGEND -->
  <h3>Create New Legend</h3>

  <form class="create-form-row"
        action="/api/legends/manage"
        method="POST">

    <div class="field">
      <label>Name</label>
      <!-- üëá keep these names EXACTLY like this -->
      <input type="text" name="name" required />
    </div>

    <div class="field small">
      <label>Role</label>
      <input type="text" name="role" placeholder="Offense / Defense / Recon / Support" required />
    </div>

    <div class="field description-field">
      <label>Description</label>
      <input type="text" name="description" required />
    </div>

    <div class="field button-field">
      <label>&nbsp;</label>
      <button type="submit" class="btn create">Create Legend</button>
    </div>
  </form>
</div>

