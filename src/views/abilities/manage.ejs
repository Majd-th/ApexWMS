<a href="/admin" class="back-link">← Back to Admin Menu</a>
<a href="/api/Legends/manage" class="back-btn">← Back to Legends Management</a>
<style>
  .back-btn {
    display: inline-block;
    margin-bottom: 15px;
    color: #f8f7ff;
    background: rgba(21, 4, 181, 0.7);
    padding: 8px 14px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
    transition: 0.2s ease;
  }

  .back-btn:hover {
    background: #1d0246;
    color: black;
    transform: scale(1.05);
  }
</style>
<div class="admin-page">
  <h2>Abilities Management – Legend #<%= legend_id %></h2>

  <!-- ABILITIES TABLE -->
  <div class="ability-list">
    <table class="apex-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Ability Name</th>
          <th>Type</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% abilities.forEach(a => { %>
          <tr>
            <td><%= a.ability_id %></td>
            <td><%= a.ability_name %></td>
            <td><%= a.ability_type %></td>
            <td class="description-cell"><%= a.description %></td>
            <td>
              <!-- later you can make edit form; for now just buttons -->
              <form method="POST"
                    action="/api/abilities/manage/<%= legend_id %>/<%= a.ability_id %>/delete"
                    style="display:inline;">
                <button type="submit" class="btn delete">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- CREATE NEW ABILITY -->
  <h3>Add Ability to Legend</h3>

  <form class="create-form-row"
        action="/api/abilities/manage/<%= legend_id %>"
        method="POST">

    <div class="field">
      <label>Ability Name</label>
      <input type="text" name="ability_name" required>
    </div>

    <div class="field small">
      <label>Type</label>
      <input type="text"
             name="ability_type"
             placeholder="Tactical / Ultimate / Passive"
             required>
    </div>

    <div class="field description-field">
      <label>Description</label>
      <input type="text" name="description" required>
    </div>

    <div class="field button-field">
      <label>&nbsp;</label>
      <button type="submit" class="btn create">Add Ability</button>
    </div>

  </form>
</div>

