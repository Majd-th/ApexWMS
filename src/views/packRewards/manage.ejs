<a href="/admin" class="back-link">← Back to Admin Menu</a>
<a href="/api/packs/manage" class="back-btn">← Back to Pack Management</a>

<div class="admin-page">

  <h2>Manage Rewards for Pack #<%= pack_id %></h2>

  <!-- REWARDS LIST -->
  <div class="rewards-list">
    <table class="apex-table">
      <thead>
        <tr>
          <th>Reward ID</th>
          <th>Item ID</th>
          <th>Legend ID</th>
          <th>Drop Rate</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% rewards.forEach(r => { %>
          <tr>
            <td><%= r.reward_id %></td>
            <td><%= r.item_id %></td>
            <td><%= r.legend_id %></td>
            <td><%= r.drop_rate %></td>
            <td>
              <!-- DELETE REWARD -->
              <form
                method="POST"
                action="/api/packRewards/manage/<%= pack_id %>/<%= r.reward_id %>/delete"
                style="display:inline;"
              >
                <button class="btn delete" type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <hr>

  <!-- ADD NEW REWARD (HORIZONTAL FORM) -->
  <h3>Add Reward to Pack</h3>

  <form
    class="create-form-row"
    action="/api/packRewards/manage/<%= pack_id %>/create"
    method="POST"
  >
    <div class="field small">
      <label>Item ID (optional)</label>
      <input type="number" name="item_id" min="1" placeholder="e.g. 5">
    </div>

    <div class="field small">
      <label>Legend ID (optional)</label>
      <input type="number" name="legend_id" min="1" placeholder="e.g. 2">
    </div>

    <div class="field small">
      <label>Drop Rate</label>
      <input type="number" step="0.0001" name="drop_rate" required placeholder="0.10">
    </div>

    <div class="field button-field">
      <label>&nbsp;</label>
      <button type="submit" class="btn create">Add Reward</button>
    </div>
  </form>

</div>

