<a href="/user/home" class="back-btn">← Back to Dashboard</a>

<style>
  .back-btn {
    position: fixed;
    top: 20px;
    left: 20px;
    background: rgba(0,0,0,0.7);
    padding: 10px 18px;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-size: 16px;
    backdrop-filter: blur(6px);
    transition: .2s;
    z-index: 100;
  }
  .back-btn:hover {
    transform: scale(1.05);
    background: rgba(0,0,0,0.9);
  }

  body {
    background: url("/img/img12.jpg") no-repeat center center fixed;
    background-size: cover;
    margin: 0;
  }

  .legend-page-container {
    padding-top: 50px;
    padding-bottom: 140px;
    width: 100%;
    text-align: center;
    color: #fff;
  }

  /* ===================== NEW APEX STYLE ===================== */

  .legend-display-container {
    position: relative;
    width: 80%;
    margin: 40px auto;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 500px;
  }

  /* BIG character artwork */
  .legend-art {
    position: absolute;
    left: -60px;
    height: 520px;
    object-fit: contain;
    filter: drop-shadow(0 0 25px black);
    z-index: 3;
  }

  /* Info panel on right */
  .legend-info-panel {
    margin-left: 280px;
    background: rgba(20, 20, 20, 0.60);
    backdrop-filter: blur(6px);
    padding: 40px 45px;
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 0 35px rgba(0,0,0,0.7);
    color: white;
    z-index: 2;
    width: 70%;
    text-align: left;
  }

  .legend-info-panel h1 {
    font-size: 48px;
    margin-bottom: 10px;
  }

  .legend-role {
    color: #DA292A;
    font-size: 18px;
    margin-bottom: 15px;
    text-transform: uppercase;
    font-weight: bold;
  }

  .legend-info-panel p {
    line-height: 1.5rem;
    margin-bottom: 12px;
  }

  .ability-title {
    color: #DA292A;
    font-size: 22px;
    margin-top: 20px;
    margin-bottom: 10px;
  }

  .ability-line {
    margin-bottom: 8px;
  }

  /* ===================== ICON BAR ===================== */
  .legend-bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: rgba(25,25,25,0.9);
    border-top: 4px solid #DA292A;
    padding: 15px 0;
    display: flex;
    gap: 20px;
    justify-content: center;
    overflow-x: auto;
    z-index: 50;
  }

  .legend-bar img {
    height: 70px;
    cursor: pointer;
    transition: 0.25s;
  }
  .legend-bar img:hover {
    transform: scale(1.15);
  }
</style>

<div class="legend-page-container">
  <h2>Legends</h2>
  <p>Select a legend to view full details.</p>

  <% if (selectedLegend) { %>

  <!-- ===================== NEW APEX CHARACTER PANEL ===================== -->
  <div class="legend-display-container">

    <!-- BIG CHARACTER ART -->
    <img 
      src="/img/legends/<%= selectedLegend.name.toLowerCase() %>.png"
      class="legend-art"
    >

    <!-- INFO PANEL -->
    <div class="legend-info-panel">
      <h1><%= selectedLegend.name %></h1>

      <div class="legend-role">
        ROLE: <%= selectedLegend.role %>
      </div>

      <p><%= selectedLegend.description %></p>

      <h3 class="ability-title">Abilities</h3>

      <% selectedLegend.abilities.forEach(a => { %>
        <p class="ability-line">
          <strong><%= a.ability_name %></strong> — <%= a.description %>
        </p>
      <% }) %>
    </div>

  </div>
  <% } %>
</div>

<!-- ICON BAR -->
<div class="legend-bar">
  <% legends.forEach(l => { %>
    <a href="/user/legends/<%= l.legend_id %>">
      <img src="/img/legends/<%= l.name.toLowerCase() %>.png">
    </a>
  <% }) %>
</div>
